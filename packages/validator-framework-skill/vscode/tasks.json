{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Validate (tsc + lint)",
      "type": "shell",
      "command": "npm run validate",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      },
      "problemMatcher": ["$tsc", "$eslint-stylish"]
    }
  ]
}
